print("----------------------------------------------------------------------------------------")


# Here the other way to print values with practise  on our dictionary
thisdic = {
    "brand ->": "Foard",
    "Model ->": "s13",
    "year ->": "2004"
}

for x in thisdic.items():
    print(x)

print("----------------------------------------------------------------------------------------")

# Here the other way to print values on our dictionary
thisdic = {
    "Brand-->": "Ahmad",
    "Model-->": "Smart",
    "Year-->": "1994"
}
for x,y in thisdic.items():
    print(x,y)

print("----------------------------------------------------------------------------------------")
